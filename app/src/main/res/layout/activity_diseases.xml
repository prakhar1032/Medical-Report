<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Diseases">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:textSize="40dp"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Diseases" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView4"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/disease_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Enter Title" />

        <EditText
            android:id="@+id/disease_2name"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="140dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Disease Description"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/disease_3name"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:gravity="start|top"
            android:ems="10"
            android:hint="Disease Cause"
            android:inputType="textMultiLine" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/disease_upload"
            android:layout_width="333dp"
            android:layout_height="53dp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="#ff1a1a"
            android:text="Update"
            android:textColor="@color/black"
            app:cornerRadius="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/disease_info"
            android:onClick="diseaseinfo"
            android:layout_width="333dp"
            android:layout_height="53dp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="#ff1a1a"
            android:text="Disease Info"
            android:textColor="@color/black"
            app:cornerRadius="18dp" />



    </LinearLayout>

</RelativeLayout>